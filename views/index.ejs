<%- include('./partials/header') %>

<!-- Background with fixed image -->
<div class="w-full min-h-screen bg-repeat  bg-fixed bg-opacity-70 overflow-hidden"
    style="background-image: url('https://img.lazcdn.com/g/p/00012926f8990e394552d3be02047621.jpg_360x360q75.jpg_.webp');">

    <!-- Stylish Hero Heading -->
    <div class="w-full text-center mt-10">
    <h1 class="text-5xl font-extrabold uppercase text-center mb-10">
        <span class="text-white drop-shadow-xl">
            Welcome to Perfume - Hub
        </span>
    </h1>
</div>


    <!-- Error Message -->
    <% if (error.length > 0) { %>
        <div class="absolute top-5 left-1/2 transform -translate-x-1/2 p-4 rounded-md bg-red-500 shadow-lg z-50">
            <span class="text-white text-sm font-medium">
                <%= error %>
            </span>
        </div>
    <% } %>

    <!-- Login Form Container -->
    <div class="flex items-center justify-center min-h-[70vh] px-4">
        <div class="w-full max-w-lg bg-white shadow-md p-10 rounded-2xl">
            <h4 class="text-2xl font-semibold text-gray-700 mb-6">Login to your account</h4>

            <form autocomplete="off" action="/users/login" method="post">
                <input
                    class="block w-full px-4 py-3 mb-4 bg-zinc-100 border border-zinc-300 rounded-md focus:outline-none focus:ring-2 focus:ring-purple-500"
                    type="email" placeholder="Email" name="email" required>

                <input
                    class="block w-full px-4 py-3 mb-4 bg-zinc-100 border border-zinc-300 rounded-md focus:outline-none focus:ring-2 focus:ring-purple-500"
                    type="password" placeholder="Password" name="password" required>

                <input
                    class="w-full py-3 mt-2 bg-purple-600 hover:bg-purple-700 text-white font-semibold rounded-full cursor-pointer transition"
                    type="submit" value="Login">
            </form>

            <!-- Register Link -->
            <p class="mt-4 text-sm text-center text-gray-600">
                Don't have an account?
                <a href="/users/register" class="text-purple-600 hover:underline font-medium">
                    Register
                </a>
            </p>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>
