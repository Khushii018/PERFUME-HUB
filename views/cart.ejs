<%- include('./partials/header') %>

<div class="w-full px-8 py-10">
    <!-- Cart Items -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        <% user.cart.forEach(function(item){ %>
        <div class="bg-white shadow-lg rounded-lg overflow-hidden flex flex-col">
            <div class="h-60 bg-[<%= item.bgcolor %>] flex items-center justify-center">
                <img class="h-44 object-contain" src="data:image/jpeg;base64,<%= item.image.toString('base64') %>" alt="Product">
            </div>
            <div class="px-4 py-3 bg-[<%= item.panelcolor %>] flex justify-between items-center">
                <h3 class="text-lg font-semibold text-white">clinge bag</h3>
                <div class="flex items-center space-x-2">
                    <button class="w-7 h-7 bg-white text-black rounded-full flex items-center justify-center ri-add-line"></button>
                    <div class="bg-white text-black px-2 py-1 rounded text-sm">01</div>
                    <button class="w-7 h-7 bg-white text-black rounded-full flex items-center justify-center ri-subtract-line"></button>
                </div>
            </div>
            <div class="bg-[<%= item.textcolor %>] px-4 py-2 flex justify-between text-white">
                <span>Net Total</span>
                <span>₹ 789</span>
            </div>
        </div>
        <% }) %>
    </div>

    <!-- Price Breakdown -->
    <div class="mt-12 max-w-3xl mx-auto bg-white shadow-md rounded-lg p-6">
        <h2 class="text-2xl font-bold mb-6 text-gray-800">Price Breakdown</h2>
        <div class="space-y-4 text-gray-700">
            <div class="flex justify-between">
                <span>Total MRP</span>
                <span>₹ 1920</span>
            </div>
            <div class="flex justify-between">
                <span>Discount on MRP</span>
                <span>₹ 0</span>
            </div>
            <div class="flex justify-between">
                <span>Platform Fee</span>
                <span>₹ 20</span>
            </div>
            <div class="flex justify-between">
                <span>Shipping Fee</span>
                <span class="text-green-600 font-medium">FREE</span>
            </div>
        </div>
        <div class="border-t mt-6 pt-4 flex justify-between font-semibold text-lg">
            <span>Total Amount</span>
            <span class="text-green-700">₹ 1940</span>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>
